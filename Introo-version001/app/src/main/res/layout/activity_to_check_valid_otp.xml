<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/custom_background"
    tools:context=".toCheckValidOTP">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter the verfication code that we are send to you through..... ${userEmail/userPhone} "
        android:layout_marginTop="30dp"
        android:layout_marginBottom="8dp"
        android:textColor="@android:color/holo_blue_light"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/otp_digit_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="0"
            android:maxLength="1"
            android:backgroundTint="@color/custom_secondary"
            android:textColor="@android:color/black"
            android:inputType="number"
            android:gravity="center"/>

        <EditText
            android:id="@+id/otp_digit_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="0"
            android:maxLength="1"
            android:backgroundTint="@color/custom_secondary"
            android:textColor="@android:color/black"
            android:inputType="number"
            android:gravity="center"/>

        <EditText
            android:id="@+id/otp_digit_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="0"
            android:maxLength="1"
            android:backgroundTint="@color/custom_secondary"
            android:textColor="@android:color/black"
            android:inputType="number"
            android:gravity="center"/>

        <EditText
            android:id="@+id/otp_digit_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="0"
            android:maxLength="1"
            android:backgroundTint="@color/custom_secondary"
            android:textColor="@android:color/black"
            android:inputType="number"
            android:gravity="center"/>

        <EditText
            android:id="@+id/otp_digit_5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="0"
            android:maxLength="1"
            android:backgroundTint="@color/custom_secondary"
            android:textColor="@android:color/black"
            android:inputType="number"
            android:gravity="center"/>

        <EditText
            android:id="@+id/otp_digit_6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="0"
            android:maxLength="1"
            android:backgroundTint="@color/custom_secondary"
            android:textColor="@android:color/black"
            android:inputType="number"
            android:gravity="center"/>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="520dp">

        <Button
            android:id="@+id/btnBackToEditEmailorPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:backgroundTint="@color/custom_secondary"
            android:text="Back"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btnContinueToCreatePassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="16dp"
            android:backgroundTint="@color/custom_secondary"
            android:text="Next"
            android:textColor="@android:color/white" />

    </RelativeLayout>

</LinearLayout>